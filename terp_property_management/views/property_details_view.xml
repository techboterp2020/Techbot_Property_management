<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <!-- TREE view of Property Details -->
    <record model="ir.ui.view" id="property_details_tree_view">
        <field name="name">Property Details</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="property_image"/>
                <field name="name"/>
                <field name="street"/>
                <field name="property_latitude"/>
                <field name="property_longitude"/>
                <field name="floor"/>
                <field name="date"/>
                <field name="gfa_sqft"/>
                <field name="gfa_m"/>
                <field name="unit_price"/>
                <field name="total_price"/>
                <field name="rent_type"/>
                <field name="active"/>
            </tree>
        </field>
    </record>


    <!-- Form view of Property Details -->
    <record model="ir.ui.view" id="property_details_form_view">
        <field name="name">property_details_form_view</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <form string="Property Details">
                <sheet>
                    <field name="property_image" widget="image" class="oe_avatar"/>

                    <div>
                        <h1>
                            <field class="o_text_overflow" name="name" placeholder="e.g. Burj khalifa"/>
                        </h1>

                    </div>
                    <group>
                        <group>
                            <span class="o_form_label o_td_label" name="address_name">
                                <!--       <field name="type" attrs="{'invisible': [('is_company','=', True)], 'required': [('is_company','!=', True)], 'readonly': [('user_ids', '!=', [])]}" class="font-weight-bold"/>-->
                                <b>Address</b>
                            </span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="township" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State"
                                       options="{'no_open': True, 'no_quick_create': True}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <!--                                 attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"-->
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            </div>
                            <field name="property_latitude"/>
                            <field name="property_longitude"/>
                            <field name="floor"/>
                            <field name="date"/>
                            <field name="gfa_sqft"/>
                            <field name="gfa_m"/>
                            <field name="unit_price"/>
                            <field name="total_price"/>
                            <field name="rent_type"/>
                            <field name="active"/>

                        </group>

                        <group>
                            <field name="parent_property"/>
                            <field name="property_type"/>
                            <field name="property_manager"/>
                            <field name="furnishing"/>
                            <field name="bedrooms"/>
                            <field name="bathrooms"/>
                            <field name="currency"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action-->
    <record id="action_property_details" model="ir.actions.act_window">
        <field name="name">Property Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.details</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property, the first step of a new RealEstate!
            </p>
            <p>
                Once the Property is confirmed, it becomes a sales order.
                <br/>
                You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>

     <!-- Menu -->
    <menuitem id="property_management_menu_root"
              name="Property Management"/>
    <menuitem
            id="property_details_menu"
            name="Property Details"
            parent="property_management_menu_root"
            action="action_property_details"
            sequence="1"/>
    <menuitem
            id="tenant_details_menu"
            name="Tenant Details"
            action="action_property_details"
            parent="property_management_menu_root"
            sequence="2"/>
    <menuitem
            id="property_booking_menu"
            name="Property Booking"
            parent="property_management_menu_root"
            action="action_property_details"
            sequence="265"/>
    <menuitem
            id="property_report_menu"
            name="Report"
            parent="property_management_menu_root"
            action="action_property_details"
            sequence="265"/>
    <menuitem
            id="property_Configuration_menu"
            name="Configuration"
            action="action_property_details"
            parent="property_management_menu_root"
            sequence="265"/>


</odoo>
